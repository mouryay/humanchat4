{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node", "react"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["../../src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
